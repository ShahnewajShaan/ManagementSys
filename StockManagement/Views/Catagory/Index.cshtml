
@model IEnumerable<Catagory>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Catagory" asp-action="Create" class="btn btn-primary">
                Add New Item
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width:100%">

    <thead>

        <tr>
            <th>
                Catagory Name
            </th>
            <th>
                Display Order
            </th>
                <th> </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="100%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Catagory" asp-action="Edit" asp-rote-id="@obj.Id"
                        class="btn btn-Primary mx-2"  ><i class="bi bi-pencil-square"></i>Edit </a>
                          <a asp-controller="Catagory" asp-action="Delete" asp-rote-id="@obj.Id"
                        class="btn btn-Primary mx-2"  ><i class="bi bi-pencil-square"></i>Delect </a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
    </table>
</div>